<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<!-- Basic App Configuration -->
		<key>LSRequiresIPhoneOS</key>
		<true/>
		<key>UIDeviceFamily</key>
		<array>
			<integer>1</integer>
			<integer>2</integer>
		</array>
		<key>UIRequiredDeviceCapabilities</key>
		<array>
			<string>arm64</string>
		</array>
		<key>UISupportedInterfaceOrientations</key>
		<array>
			<string>UIInterfaceOrientationPortrait</string>
		</array>

		<!-- Bundle Information -->
		<key>CFBundleIdentifier</key>
		<string>com.Danfe.QrSortable</string>
		<key>CFBundleDisplayName</key>
		<string>QrSortable</string>
		<key>CFBundleName</key>
		<string>QrSortable</string>
		<key>CFBundleShortVersionString</key>
		<string>1.0</string>
		<key>CFBundleVersion</key>
		<string>1</string>
		<key>MinimumOSVersion</key>
		<string>16.0</string>

		<!-- Network Configuration (Required for AppCenter) -->
		<key>NSAppTransportSecurity</key>
		<dict>
			<key>NSAllowsArbitraryLoads</key>
			<true/>
		</dict>

		<!-- Camera Permission (Required for QR Scanner) -->
		<key>NSCameraUsageDescription</key>
		<string>This app needs camera access to scan QR codes.</string>

		<!-- Photo Library Permission (If you save/load QR codes) -->
		<key>NSPhotoLibraryUsageDescription</key>
		<string>This app needs photo library access to save and load QR codes.</string>

		<key>NSPhotoLibraryAddUsageDescription</key>
		<string>This app needs permission to save QR codes to your photo library.</string>

		<!-- Optional: If you need file access -->
		<key>UIFileSharingEnabled</key>
		<true/>
		<key>LSSupportsOpeningDocumentsInPlace</key>
		<true/>

		<!-- Launch Screen -->
		<key>UILaunchStoryboardName</key>
		<string>LaunchScreen</string>

		<!-- Status Bar Configuration -->
		<key>UIStatusBarHidden</key>
		<false/>
		<key>UIViewControllerBasedStatusBarAppearance</key>
		<false/>

		<!-- Supported Platforms -->
		<key>XSAppIconAssets</key>
		<string>Assets.xcassets/appicon.appiconset</string>
	</dict>
</plist>